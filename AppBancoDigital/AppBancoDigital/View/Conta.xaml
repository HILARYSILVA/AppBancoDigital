<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppBancoDigital.View.Conta">

    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,1" EndPoint="1,0">
            <GradientStop Color="Purple" Offset="0.3" />
            <GradientStop Color="Red" Offset="1.1" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <StackLayout  Padding="80" VerticalOptions="Start" 
                         HorizontalOptions="Center">
    
        <Image x:Name="logo" HeightRequest="80" />
       


        <Label Text="Conta Pessoal Digital" FontSize="Large"
                           FontAttributes="Italic"  TextColor="White" HorizontalOptions="Center" />
      
            <ImageButton HeightRequest="50" WidthRequest="50" BackgroundColor="Transparent" CornerRadius="20" Source="https://logospng.org/download/pix/logo-pix-icone-512.png" Padding="5" Clicked="Pix_Clicked_1" Margin="50" />
            <Label Text="" FontSize="15" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center"/>
   

        <Button Text="Voltar" x:Name="Voltar" BackgroundColor="Transparent" TextColor="White" 
                  CornerRadius="5" HorizontalOptions="Start" VerticalOptions="Start" Margin="20"
                      Clicked="Voltar_Clicked"/>

        
    </StackLayout>

    


</ContentPage>
